<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.antrixgaming.leap">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_leap_logo_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_leap_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".splashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoadScreen"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Leap"
            android:label="@string/title_activity_leap"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".phoneVerifyActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".registerLogin"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".newLeap"
            android:label="@string/title_activity_new_leap"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity_one_chat" />
        <activity android:name=".activity_one_circle" />
        <activity android:name=".phoneContactList"
            android:label="Select Contact"
            ></activity>
    </application>

</manifest>