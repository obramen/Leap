<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="6dp">

    <TextView
        android:id="@+id/groupNotificationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="NOTIFICATION"
        android:textSize="12sp"
        android:visibility="gone"
        android:maxWidth="230dp"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:id="@+id/groupTextBracketTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/group_phoneNumber"
            android:textStyle="normal|bold"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/group_message_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="bottom|end"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/group_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:visibility="invisible"
            android:textSize="12sp" />

    </LinearLayout>




    <RelativeLayout
        android:id="@+id/groupTextBracketBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupTextBracketTop"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_message_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/group_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_message_text"
            android:textSize="12sp" />
    </RelativeLayout>


</RelativeLayout>