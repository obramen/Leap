<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:id="@+id/publicCircleCard"
        android:background="@color/transparent"
        android:layout_width="112dp"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/leaperImage"
            android:layout_below="@id/gameType"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/profile_picture"
            app:civ_border_color="#EEE"
            app:civ_border_width="2dp" />

        <RelativeLayout
            android:layout_below="@id/leaperImage"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:id="@+id/leaperName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leaper Name"
                android:maxLines="1"
                android:visibility="invisible"
                android:ellipsize="end"
                android:layout_centerInParent="true"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/displayedLeaperName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leaper Name"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_centerInParent="true"
                android:textSize="13sp"
                />



        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>