<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.antrixgaming.leap.eventDetails">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/commentInputBox">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/eventID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/eventImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/background_color"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_below="@+id/eventImage"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <TextView
                                    android:id="@+id/eventDay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="16"
                                    android:textSize="25sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/eventMonth"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/eventDay"
                                    android:layout_centerHorizontal="true"
                                    android:text="OCT"
                                    android:textAllCaps="true"
                                    android:textStyle="bold" />


                            </RelativeLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="7">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="2dp">

                                <TextView
                                    android:id="@+id/eventTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="Ascension Uprising"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/eventPeriod"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/eventTitle"
                                    android:layout_marginTop="2dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="October 16 - October17"
                                    android:textSize="13sp" />



                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:id="@+id/optionsImage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="0.2dp"
                                    android:padding="4dp"
                                    android:src="@drawable/ic_more" />


                            </RelativeLayout>

                        </RelativeLayout>


                    </LinearLayout>

                </RelativeLayout>


            </android.support.v7.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/locationHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="LOCATION:"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/eventLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:layout_toEndOf="@+id/locationHeader"
                    android:maxLines="1"
                    android:textStyle=""
                    android:text="Kempinski Hotel"
                    android:layout_marginStart="5dp"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/hostHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="HOST:"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_below="@+id/locationHeader"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/displayedLeaperName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Liam"
                    android:layout_toEndOf="@id/hostHeader"
                    android:layout_marginStart="5dp"
                    android:layout_below="@id/eventLocation"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/eventByTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Liam"
                    android:visibility="invisible"
                    android:layout_toEndOf="@id/hostHeader"
                    android:layout_marginStart="5dp"
                    android:layout_below="@id/eventLocation"
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/eventDetailsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:minHeight="200dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:padding="10dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2">


                            <TextView
                                android:id="@+id/detailsHeader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:visibility="visible"
                                android:text="INFORMATION"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/eventDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_below="@id/detailsHeader"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:text="Details for the Event" />


                            <TextView
                                android:id="@+id/commentsHeader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_below="@+id/eventDescription"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="40dp"
                                android:text="COMMENTS"
                                android:layout_marginBottom="5dp"
                                android:textStyle="bold"/>


                            <ListView
                                android:id="@+id/list_of_EventComments"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/commentsHeader"
                                android:divider="@android:color/transparent"
                                android:dividerHeight="4dp"
                                android:scrollbarSize="5dp"
                                />



                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:text="ATTENDING" />


                        </RelativeLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </RelativeLayout>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/commentInputBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp">


        <EditText
            android:id="@+id/commentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/commentButton"
            android:hint="Comment..."
            android:textSize="14sp" />

        <Button
            android:id="@+id/commentButton"
            style="@style/redButtonDark"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/commentEditText"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:text="Send"
            android:textSize="12sp" />


    </RelativeLayout>



</RelativeLayout>