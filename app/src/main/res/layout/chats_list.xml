<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="5dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/leaper_image"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/profile_picture"
                app:civ_border_color="#EEE"
                app:civ_border_width="2dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:padding="5dp">

            <TextView
                android:id="@+id/leaperName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/lastLeaperMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/leaperName"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/lastLeaperMessageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/pendingLeaperMessageQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lastLeaperMessageTime"
                android:background="@drawable/redbutton"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text=""
                android:maxLines="1"
                android:visibility="gone"
                android:ellipsize="end"
                android:textSize="11sp"
                android:padding="2dp"/>


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>